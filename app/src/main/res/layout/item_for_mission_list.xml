<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ic_48dp"
    android:gravity="fill_horizontal"
    android:paddingLeft="@dimen/_16dp"
    android:paddingRight="@dimen/_16dp"
    android:paddingTop="@dimen/_4dp"
    android:paddingBottom="@dimen/_4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_mission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_mission"
            android:textSize="@dimen/typo_headline"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_num_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inven_num_task"
            android:textSize="@dimen/typo_headline_sub"
            android:paddingLeft="@dimen/_16dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerInside"
        android:layout_toLeftOf="@+id/img_next"
        android:layout_marginRight="@dimen/_16dp"/>

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_mbri_arrow_next"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"/>


</RelativeLayout>