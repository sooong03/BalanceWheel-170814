<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ic_48dp"
    android:padding="@dimen/_4dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/btn_tracker"
        android:layout_width="@dimen/ic_24dp"
        android:layout_height="@dimen/ic_24dp"
        app:srcCompat="@drawable/ic_toolbar_tracker"
        android:clickable="true"
        android:contextClickable="true"
        />


    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_date_start"
        android:textSize="@dimen/typo_headline"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/btn_calendar"
        android:layout_width="@dimen/ic_24dp"
        android:layout_height="@dimen/ic_24dp"
        app:srcCompat="@drawable/ic_expand_more"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:contextClickable="true"/>

</RelativeLayout>